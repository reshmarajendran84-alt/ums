<%- include("../layouts/header.ejs") %>

  <title>Admin Dashboard</title>
  <h2>Admin Dashboard</h2>
  <a href="/admin/logout">Logout</a>
  <a href="/admin/add-user">Add User</a>
  <table border="1" cellpadding="10">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Actions</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td>
          <a href="/admin/edit-user?id=<%= user._id %>">Edit</a> |
          <a href="/admin/delete-user?id=<%= user._id %>" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
<%- include("../layouts/footer.ejs") %>


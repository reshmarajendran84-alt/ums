<%- include("../layouts/header.ejs") %>

<title>Admin Dashboard</title>

<div class="dashboard-container">
  <header class="dashboard-header">
    <h2>Admin Dashboard</h2>
  </header>

  <div class="actions">
        <a href="/admin/logout" class="logout-btn">Logout</a>

    <a href="/admin/add-user" class="add-user-btn">+ Add User</a>
  </div>

  <table class="users-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.mobile %></td>
          <td>
            <a href="/admin/edit-user?id=<%= user._id %>" class="edit-link">Edit</a> |
            <a href="/admin/delete-user?id=<%= user._id %>" class="delete-link" onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
    
  </table>  <a href="/homepage" class="text-cyan-300 hover:opacity-100 transition">Back to Home Page</a>
</div>

<%- include("../layouts/footer.ejs") %>

<style>
  .dashboard-container {
    max-width: 900px;
    margin: 40px auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logout-btn {
    background: crimson;
    color: white;
    padding: 6px 12px;
    text-decoration: none;
    border-radius: 5px;
  }

  .actions {
    margin: 20px 0;
  }

  .add-user-btn {
    background: green;
    color: white;
    padding: 8px 14px;
    text-decoration: none;
    border-radius: 5px;
  }

  .users-table {
    width: 100%;
    border-collapse: collapse;
  }

  .users-table th, .users-table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: center;
  }

  .users-table th {
    background-color: #f4f4f4;
  }

  .edit-link {
    color: blue;
    text-decoration: none;
  }

  .delete-link {
    color: red;
    text-decoration: none;
  }
</style>

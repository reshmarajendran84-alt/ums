<%- include('../layouts/header') %>
<title>Add User</title>

<div class="form sign-up">
  <form action="/admin/add-user" method="POST" enctype="multipart/form-data" class="space-y-6">
    <!-- Background spheres -->
    <div class="sphere sphere-1"></div>
    <div class="sphere sphere-2"></div>
    <div class="sphere sphere-3"></div>

    <!-- Main card -->
    <div class="glass-card">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold title mb-2">Add User</h1>
        <p class="text-white opacity-80">Create a new user</p>
      </div>

      <% if (typeof message !== 'undefined' && message) { %>
        <div class="message-box">
          <%= message %>
        </div>
      <% } %>

      <div class="space-y-4">
        <!-- Name -->
        <div>
          <div class="flex items-center mb-1">
            <i class="fas fa-user text-white mr-2 opacity-80"></i>
            <label for="name" class="text-white opacity-80">Name</label>
          </div>
          <input type="text" name="name" id="name" placeholder="Enter Name" required class="input-field">
        </div>

        <!-- Email -->
        <div>
          <div class="flex items-center mb-1">
            <i class="fas fa-envelope text-white mr-2 opacity-80"></i>
            <label for="email" class="text-white opacity-80">Email</label>
          </div>
          <input type="email" name="email" id="email" placeholder="Enter Email" required class="input-field">
        </div>

        <!-- Mobile Number -->
        <div>
          <div class="flex items-center mb-1">
            <i class="fas fa-phone text-white mr-2 opacity-80"></i>
            <label for="mobile" class="text-white opacity-80">Mobile Number</label>
          </div>
          <input type="text" name="mobile" id="mobile" placeholder="Enter Mobile Number" required class="input-field">
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-6 text-center">
        <button type="submit" class="btn btn-submit">Add User</button>
            <a href="/admin/dashboard" class="btn btn-back">â¬… Go Back</a>

      </div>
    </div>
    <!-- Back Link -->
  <div class="text-center mt-4">
  </div>
</div>
  </form>

  

<%- include('../layouts/footer') %>

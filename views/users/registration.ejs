<%- include('../layouts/header') %>

<div class="form sign-up">
  

    <form action="/register" method="post" enctype="multipart/form-data" class="space-y-6">
        <!-- Background spheres -->
        <div class="sphere sphere-1"></div>
        <div class="sphere sphere-2"></div>
        <div class="sphere sphere-3"></div>

        <!-- Main register card -->
        <div class="glass-card">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold title mb-2">Sign Up</h1>
                <p class="text-white opacity-80">Create your account</p>
            </div>

            <div class="space-y-4">

                <% if (typeof message !== 'undefined' && message) { %>
        <div style="color: rgb(240, 246, 240); font-weight: bold; margin-bottom: 10px;">
            <%= message %>
        </div>
    <% } %>
                <!-- Name -->
                <div>
                    <div class="flex items-center mb-1">
                        <i class="fas fa-user text-white mr-2 opacity-80"></i>
                        <label for="name" class="text-white opacity-80">Name</label>
                    </div>
                    <input type="text" name="name" id="name" placeholder="Enter Name" required class="input-field">
                </div>

                <!-- email -->
                <div>
                    <div class="flex items-center mb-1">
                        <i class="fas fa-envelope text-white mr-2 opacity-80"></i>
                        <label for="email" class="text-white opacity-80">email</label>
                    </div>
                    <input type="email" name="email" id="email" placeholder="Enter email" required class="input-field">
                </div>

                <!-- Mobile Number -->
                <div>
                    <div class="flex items-center mb-1">
                        <i class="fas fa-phone text-white mr-2 opacity-80"></i>
                        <label for="mobile" class="text-white opacity-80">Mobile Number</label>
                    </div>
                    <input type="text" name="mobile" id="mobile" placeholder="Enter Mobile Number" required class="input-field">
                </div>

                <!-- Upload Image -->
                <div>
                    <div class="flex items-center mb-1">
                        <i class="fas fa-upload text-white mr-2 opacity-80"></i>
                        <label for="image" class="text-white opacity-80">Upload Image</label>
                    </div>
                    <input type="file" name="image" id="image" required class="input-field">
                </div>

                <!-- Password -->
                <div>
                    <div class="flex items-center mb-1">
                        <i class="fas fa-lock text-white mr-2 opacity-80"></i>
                        <label for="password" class="text-white opacity-80">Password</label>
                    </div>
                    <input type="password" name="password" id="password" placeholder="Enter Password" required class="input-field">
                </div>
            </div>

            <button type="submit" class="w-full btn-login font-medium mt-4">Sign Up</button>
            <a href="login" class="text-white text-sm opacity-80 hover:opacity-100 hover:text-cyan-300 transition">Login</a>

        </div>

    </form>
</div>

<%- include('../layouts/footer') %>
